{
  "name": "slack-instapaper-middleware",
  "version": "1.0.0",
  "description": "Middleware to digest Slack webhook and trigger Instapaper API",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "npm run build-ts",
    "build-ts": "tsc"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "coverage/**",
      "**/*.spec.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "author": "Murtaza Anverali",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.0.39",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "firebase": "^4.6.2",
    "firebase-admin": "^5.4.0"
  }
}
